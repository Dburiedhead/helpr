<div class="pages">
  <div class="container" id="edit-profile">
    <div class="row">
      <div class="col-md-10">
        <h2>Edit <%= resource_name.to_s.humanize %></h2>
      </div>
      <div class="col-md-1">
        <%= link_to "Back", :back %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field form-group">
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name, class:"form-control", autofocus: true%>
          </div>

          <div class="field form-group">
            <%= f.label :last_name %><br />
            <%= f.text_field :last_name, class:"form-control", autofocus: true %>
          </div>

          <div class="field form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
          </div>


          <div class="field form-group">
            <% if resource.gov_approved_id.attached? %>
              <p>You've registered a government approved ID</p><i data-feather="check-circle"></i>
            <% else %>
              <p>You need a government approved ID </p><i data-feather="x-circle"></i>
            <% end %>
          </div>
          <div class="field form-group">
            <%= f.file_field :gov_approved_id, class:"form-control", type:"file", id:"formFile", accept: 'image/png, image/jpg, image/jpeg, application/pdf' %>
          </div>

          <div class="field form-group">
            <%#= image_tag(resource.avatar_thumbnail), height: 40, width: 40, class: "rounded-circle" if resource.avatar.attached? %>
          </div>
          <% if resource.avatar.attached? %>
            <div class="field form-group">
              <%= image_tag(resource.avatar) %>
            </div>
          <% end %>

          <div class="field form-group">
            <%= f.file_field :avatar, class:"form-control", type:"file", id:"formFile" %>
          </div>
          
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field form-group">
            <%= f.label :password %> <i><%= @minimum_password_length %> characters minimum (leave blank if you don't want to change it)</i><br />
            <br />        
            <%= f.password_field :password, class:"form-control", autocomplete: "new-password" %>
            <% if @minimum_password_length %>
            <% end %>
          </div>

          <div class="field form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password" %>
          </div>

          <div class="field form-group">
            <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, class:"form-control", autocomplete: "current-password" %>
          </div>

          <div class="actions form-group">
            <%= f.submit "Update", class:"btn btn-primary" %>
          </div>
        <% end %>
      </div>
      <div class="col-md-4">
        <h3>Cancel my account</h3>
        <p>Unhappy? <%= button_to "Delete my account", registration_path(resource_name), class:"btn btn-danger", data: { confirm: "Are you sure?" }, method: :delete %></p>
      </div>
    </div>
  </div>
</div>